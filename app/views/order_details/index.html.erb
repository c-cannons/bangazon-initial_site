<div class="container center">
  <div class="row justify-content-center">
    <div class="col-md-8">

        <% if @shopping_cart != []%>
            <br>
                <h2>Shopping Cart</h2>
            <br>
            <%= link_to 'Clear Shopping Cart', clear_cart_path, method: :delete, :data => {:confirm => 'Are you sure?'} %>
            <br>
            <table>
            <tr id="table-headers">
                <th>Product Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Location</th>
                <th></th>
                <th></th>
            </tr>

            <% @shopping_cart.each do |item| %>
                <tr>
                <td><%= item.product_name %></td>
                <td>$<%= item.product_price %></td>
                <td><%= item.product_desc %></td>
                <td><%= item.product_location %></td>
                <td><%= item.order_details_id %></td>
                <td><%= link_to 'Delete from Cart', order_detail_path(item.order_details_id),
                        method: :delete,
                        data: {confirm: 'Are you sure?' } %></td>
                </tr>
            <% end %>
            <tr>
              <td>TOTAL:</td>
              <td>$<%= @cart_total[0].grand_total %></td>
              <td></td><td></td><td></td><td></td>
            </tr>
            </table>

        <% else %>

            <header>
                <h5 class="text-danger"><%= flash[:notice] %></h5>
                <h1 class="welcome">Sorry your shopping cart is empty.</h1>
                <h2>You need stuff?  We GOT stuff.â„¢</h2>
            </header>

            <div>
                <%= image_tag('CHUDazon', class:'img-fluid') %>
            </div>
        <% end %>
        </div>
    </div>
</div>

<%= @test %>
