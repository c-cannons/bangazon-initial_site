<% @products.each_slice(3) do |prod|%>
    <div class="row">
        <% prod.each do |p|%>
            <div class="card col-md" style="width: 20rem;">
            <%# <%= image_tag p.avatar.original_filename, class: "card-img-top" %>
                <div class="card-block">
                    <h4 class="card-title"> <%= p[:product_name]%> </h4>
                    <h6> Quantity: </h6>
                    <p class="card-text"> <%= p[:quantity] %> </p>
                    <h6> Price: </h6>
                    <p class="card-text">$ <%= p[:product_price] %> </p>
                    <% if session[:customer_id] %>
                      <%= link_to 'Add to Cart', add_to_cart_path(p[:id]), method: :post, :data => {:confirm => 'Item Added to Cart!'} %>
                    <br>
                    <% end %>
                    <%= link_to 'More Info', product_path(p), class: 'btn' %>
                </div>
            </div>
        <% end %>
    </div>
<% end %>
